<Window x:Class="BlackBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Black Book"
        Width="500" Height="230"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Style="{StaticResource {x:Type Window}}">



    <!-- OUTER BORDER for Accent and rounding -->
    <Border BorderBrush="{StaticResource BrushAccent}"
            BorderThickness="2"
            CornerRadius="12"
            Background="{StaticResource BrushBg1}">
        <DockPanel LastChildFill="True">

            <!-- SyxBar is now injected by SyxChrome.xaml style -->
            <!-- You do not need to redefine it here -->

            <!-- Main content -->
            <Grid Background="{StaticResource BrushBg1}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Source="/Assets/logostrip.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Opacity="0.85"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,32"
                            Grid.Row="1">

                    <Button x:Name="CreateKeyBtn"
                            Content="Create Key"
                            Margin="0,0,16,0"
                            Click="CreateKey_Click"/>

                    <Button x:Name="OpenBookBtn"
                            Content="Open Book"
                            Margin="0,0,16,0"
                            Click="OpenBook_Click"/>

                    <Button Content="Quit"
                            Click="Quit_Click"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>
