<Window x:Class="BlackBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Black Book"
        Height="230" Width="500"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">


       <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,32"
                        Grid.Row="1">

                <Button x:Name="CreateKeyBtn"
                        Content="Create Key"
                        Margin="0,0,16,0"
                        Click="CreateKey_Click"/>

                <Button x:Name="OpenBookBtn"
                        Content="Open Book"
                        Margin="0,0,16,0"
                        Click="OpenBook_Click"/>

                <Button Content="Quit"
                        Click="Quit_Click"/>

                <Button Content="Log Out"
        Margin="0,0,0,0"
        Width="80"
        Click="Logout_Click"/>

            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
