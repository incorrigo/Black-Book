<!-- MainWindow.xaml -->
<Window x:Class="BlackBook.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BlackBook.Views"
        Title="Black Book - Personal Contacts Manager"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Close Profile" Click="CloseProfile_Click"/>
                <MenuItem Header="Change Password..." Click="ChangePassword_Click"/>
                <MenuItem Header="Delete Profile..." Click="DeleteProfile_Click"/>
                <Separator/>
                <MenuItem Header="_About Black Book..." Click="About_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>


            <MenuItem Header="_New">
                <MenuItem Header="Person..."      Click="NewPerson_Click" />
                <MenuItem Header="Company..."     Click="NewCompany_Click" />
                <MenuItem Header="Situation..."   Click="NewSituation_Click" />
                <MenuItem Header="Correspondence..." Click="NewInteraction_Click" />
            </MenuItem>
        </Menu>

        <!-- Main content as a TabControl -->
        <TabControl x:Name="MainTabControl">
            <TabItem Header="Contacts">
                <views:PeopleManager x:Name="PeopleManagerView" />
            </TabItem>
            <TabItem Header="Situations">
                <views:SituationManager x:Name="SituationManagerView" />
            </TabItem>
            <TabItem Header="Companies">
                <views:CompanyManager x:Name="CompanyManagerView" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
