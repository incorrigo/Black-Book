<Window x:Class="BlackBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Black Book"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Data tabs -->
        <TabControl Name="DataTab"
                    DockPanel.Dock="Top"
                    Margin="10"
                    Height="330">
            <TabItem Header="People">
                <ListBox Name="PeopleListBox"
                         DisplayMemberPath="Name"
                         Margin="5"/>
            </TabItem>
            <TabItem Header="Companies">
                <ListBox Name="CompaniesListBox"
                         DisplayMemberPath="Name"
                         Margin="5"/>
            </TabItem>
            <TabItem Header="Situations">
                <ListBox Name="SituationsListBox"
                         DisplayMemberPath="Title"
                         Margin="5"/>
            </TabItem>
            <TabItem Header="Interactions">
                <ListBox Name="InteractionsListBox"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="2">
                                <TextBlock Text="{Binding Notes}" FontWeight="Bold"/>
                                <TextBlock FontSize="10" Foreground="Gray"
                                           Text="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

        <!-- Action buttons -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,10">

            <Button x:Name="CreateKeyBtn"
                    Content="Create Key"
                    Margin="0,0,16,0"
                    Click="CreateKey_Click"/>

            <Button x:Name="OpenBookBtn"
                    Content="Open Book"
                    Margin="0,0,16,0"
                    Click="OpenBook_Click"/>

            <Button x:Name="ManagePeopleBtn"
                    Content="Manage People"
                    Margin="0,0,16,0"
                    Click="ManagePeople_Click"/>

            <Button x:Name="AddSampleDataBtn"
                    Content="Add Sample Data"
                    Margin="0,0,16,0"
                    Click="AddSampleData_Click"/>

            <Button x:Name="LogoutBtn"
                    Content="Log Out"
                    Margin="0,0,16,0"
                    Width="80"
                    Click="Logout_Click"/>

            <Button x:Name="QuitBtn"
                    Content="Quit"
                    Click="Quit_Click"/>

        </StackPanel>
    </DockPanel>
</Window>
