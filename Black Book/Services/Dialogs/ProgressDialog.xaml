<Window x:Class="BlackBook.Services.Dialogs.ProgressDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize"
		SizeToContent="WidthAndHeight"
		Title="Working…"
		Background="{DynamicResource SurfaceBrush}"
		Foreground="{DynamicResource TextBrush}">
    <StackPanel Margin="16" Width="520">
        <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <TextBlock x:Name="MessageBlock" Margin="0,6,0,10" TextWrapping="Wrap"/>
        <ProgressBar x:Name="Bar" Height="16" Minimum="0" Maximum="100" Value="0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
