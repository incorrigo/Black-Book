<Window x:Class="BlackBook.Services.Dialogs.ConfirmDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize"
		SizeToContent="WidthAndHeight"
		Title="Confirm"
		Background="{DynamicResource SurfaceBrush}"
		Foreground="{DynamicResource TextBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <TextBlock x:Name="QuestionBlock" Grid.Row="1" Margin="0,8,0,8" TextWrapping="Wrap" Width="520"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox x:Name="KeywordBox" Width="160" Margin="0,0,8,0" />
            <Button x:Name="YesButton" Content="Confirm" Width="100" IsDefault="True" Click="Yes_Click" IsEnabled="False"/>
            <Button Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
