<Window x:Class="BlackBook.Services.Dialogs.PasswordInputDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize"
		SizeToContent="WidthAndHeight"
		Title="Black Book"
		Background="{DynamicResource SurfaceBrush}"
		Foreground="{DynamicResource TextBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,8">
            <TextBlock x:Name="PromptBlock" Margin="0,0,0,4" TextWrapping="Wrap"/>
            <PasswordBox x:Name="PasswordBox" Width="260"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="88" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="88" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
