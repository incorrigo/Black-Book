<Window x:Class="BlackBook.Services.Dialogs.SimpleDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize"
		SizeToContent="WidthAndHeight"
		Title="Black Book"
		Background="{DynamicResource SurfaceBrush}"
		Foreground="{DynamicResource TextBrush}">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- system icon -->
        <Image x:Name="IconImage"
			Grid.RowSpan="2"
			Width="48"
			Height="48"
			Margin="0,0,12,0"/>

        <TextBlock x:Name="TitleBlock"
			Grid.Column="1"
			FontWeight="Bold"
			FontSize="16"
			Margin="0,0,0,8"
			TextWrapping="Wrap"/>

        <TextBlock x:Name="MessageBlock"
			Grid.Row="1"
			Grid.Column="1"
			TextWrapping="Wrap"
			Width="480"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="NoButton" Content="No" Width="88" Margin="0,0,8,0" Visibility="Collapsed" Click="No_Click"/>
            <Button x:Name="YesButton" Content="Yes" Width="88" Margin="0,0,8,0" Visibility="Collapsed" Click="Yes_Click"/>
            <Button x:Name="OkButton" Content="OK" Width="88" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="88" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
