<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Palette sharing (already present in DarkThemes) -->
    <SolidColorBrush x:Key="SyxBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="SyxForeground" Color="White"/>
    <SolidColorBrush x:Key="SyxBorder"     Color="#444"/>

    <!-- Syx custom window chrome: flat, square, compact -->
    <Style TargetType="Window"
           BasedOn="{StaticResource BaseWindowStyle}">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="{StaticResource BrushBg1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushAccent}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel LastChildFill="True">
                            <Grid x:Name="SyxBar"
                                  Height="28"
                                  Background="{StaticResource BrushAccent}"
                                  DockPanel.Dock="Top">
                                <TextBlock Text="{TemplateBinding Title}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                                <Button x:Name="SyxCloseBtn"
                                        Content="✕"
                                        Width="24" Height="24"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,6,0"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="12"
                                        Cursor="Hand"/>
                            </Grid>
                            <ContentPresenter/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
