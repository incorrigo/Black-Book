<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- palette sharing -->
    <SolidColorBrush x:Key="SyxBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="SyxForeground" Color="White"/>
    <SolidColorBrush x:Key="SyxBorder"     Color="#444"/>

    <!-- Syx chrome -->
    <Style TargetType="Window"
           BasedOn="{StaticResource BaseWindowStyle}">
        <Setter Property="WindowStyle"        Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background"         Value="{StaticResource BrushBg1}"/>
        <Setter Property="BorderBrush"        Value="{StaticResource BrushLine}"/>
        <Setter Property="BorderThickness"    Value="1"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel>
                            <!-- title bar -->
                            <Grid Height="32" Background="#1f1f1f" DockPanel.Dock="Top">
                                <TextBlock Text="{TemplateBinding Title}"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </Grid>

                            <!-- content -->
                            <ContentPresenter/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- list / combo styles unchanged -->
</ResourceDictionary>
