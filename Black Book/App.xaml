<Application x:Class="BlackBook.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BlackBook.Converters"
			 StartupUri="Views/InitialLoginWindow.xaml">

    <!-- Global brushes / styles -->
    <Application.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF0FA3FF" />
        <converters:DirectionColorConverter  x:Key="DirectionColorConverter" />
        <converters:RelationshipGlyphConverter x:Key="RelationshipGlyphConverter" />
        <converters:CompanyNameConverter x:Key="CompanyNameConverter"/>
        <converters:PersonNameConverter  x:Key="PersonNameConverter"/>
        <converters:StatusBrushConverter x:Key="StatusBrushConverter" />
        <converters:InteractionPartiesConverter     x:Key="InteractionPartiesConverter"/>
        <converters:InteractionTypeFriendlyConverter x:Key="InteractionTypeFriendlyConverter"/>
    </Application.Resources>

</Application>
