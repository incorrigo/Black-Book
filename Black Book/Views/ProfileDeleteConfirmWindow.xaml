<!-- ProfileDeleteConfirmWindow.xaml -->
<Window x:Class="BlackBook.Views.ProfileDeleteConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Profile Deletion"
        Width="420" Height="293"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Verdana">

    <Grid Margin="20,20,20,22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Instruction -->
            <RowDefinition Height="Auto"/>
            <!-- Profile Name -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Confirm DELETE -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="To confirm deletion, please enter the following details:"
                   FontWeight="Bold"
                   Margin="0,0,0,12" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Profile name (case sensitive):" Margin="0,0,0,2"/>
            <TextBox x:Name="ProfileNameBox" Height="24"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Password:" Margin="0,0,0,2"/>
            <PasswordBox x:Name="PasswordBox" Height="24"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Type DELETE to confirm:" Margin="0,0,0,2"/>
            <TextBox x:Name="ConfirmDeleteBox" Height="24"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_Click" IsCancel="True"/>
            <Button Content="Delete" Width="90" Click="Delete_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
