<!-- ProfileDeleteProgressWindow.xaml -->
<Window x:Class="BlackBook.Views.ProfileDeleteProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deleting Profile"
        Width="350" Height="120"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        FontFamily="Verdana">
    <Grid Margin="16">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Your profile is being deleted..." TextAlignment="Center" Margin="0,0,0,8"/>
            <ProgressBar x:Name="ProgressBar" Height="20" IsIndeterminate="False" Minimum="0" Maximum="100"/>
        </StackPanel>
    </Grid>
</Window>
