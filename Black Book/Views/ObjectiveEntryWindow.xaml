<!-- ObjectiveEntryWindow.xaml -->
<Window x:Class="BlackBook.Views.ObjectiveEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Objective Entry"
        Height="540" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Verdana">
    <Window.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="Language" Value="en-CA"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Situation -->
            <RowDefinition Height="Auto"/>
            <!-- Person -->
            <RowDefinition Height="Auto"/>
            <!-- Importance -->
            <RowDefinition Height="Auto"/>
            <!-- Waiting & Reason -->
            <RowDefinition Height="Auto"/>
            <!-- Follow-Up -->
            <RowDefinition Height="Auto"/>
            <!-- Due Date -->
            <RowDefinition Height="*"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Objective Title:"/>
        <TextBox x:Name="TitleBox" Grid.Row="0" Margin="0,20,0,8"/>

        <TextBlock Grid.Row="1" Text="Situation:"/>
        <ComboBox x:Name="SituationComboBox" Grid.Row="1" Margin="0,20,0,8"
                  ItemsSource="{Binding Situations}" DisplayMemberPath="Title"/>

        <TextBlock Grid.Row="2" Text="Person if any:"/>
        <ComboBox x:Name="PersonComboBox" Grid.Row="2" Margin="0,20,0,8"
                  ItemsSource="{Binding People}" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="3" Text="Importance:"/>
        <ComboBox x:Name="ImportanceComboBox" Grid.Row="3" Margin="0,20,0,8" SelectedIndex="0">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Important"/>
            <ComboBoxItem Content="Emergency"/>
            <ComboBoxItem Content="Waiting"/>
            <ComboBoxItem Content="Delegated"/>
            <ComboBoxItem Content="Cancelled"/>
            <ComboBoxItem Content="Done"/>
        </ComboBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox x:Name="WaitingCheckBox" Content="Waiting?" VerticalAlignment="Center"/>
            <TextBox x:Name="ReasonBox" Width="475" Margin="12,0,0,0"
                     MaxLength="150"
                     IsEnabled="{Binding IsChecked, ElementName=WaitingCheckBox}"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Text="Follow-Up Date:" Margin="0,12,0,0"/>
        <DatePicker x:Name="FollowUpDatePicker" Grid.Row="5" Margin="0,32,0,8"/>

        <TextBlock Grid.Row="6" Text="Deadline:" Margin="0,12,0,0"/>
        <DatePicker x:Name="DueDatePicker" Grid.Row="6" Margin="0,32,0,8"/>

        <TextBlock Grid.Row="7" Text="Objective information:" Margin="0,12,0,0"/>
        <TextBox x:Name="DescBox" Grid.Row="7" Margin="0,32,0,8"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,12,8,0"
                    Click="Cancel_Click" IsCancel="True"/>
            <Button Content="Save" Width="90" Margin="0,12,0,0"
                    Click="Save_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
