<Window x:Class="BlackBook.Views.InitialLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Profile"
        Height="220" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="ProfileList" Grid.Row="0" Margin="0 0 0 12"/>
        <PasswordBox x:Name="PasswordInput" Grid.Row="1" Margin="0 0 0 12"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0 0 5 0" Click="Cancel_Click"/>
            <Button Content="Unlock" Width="80" Click="Unlock_Click"/>
            <Button Content="Create New Profile"
        Width="140"
        Margin="0 12 0 0"
        HorizontalAlignment="Right"
        Click="CreateProfile_Click"/>

        </StackPanel>
    </Grid>
</Window>
