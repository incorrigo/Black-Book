<!-- InitialLoginWindow.xaml -->
<Window x:Class="BlackBook.Views.InitialLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Profile"
        Height="320" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Verdana">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Profile List -->
        <ListView x:Name="ProfileList"
                  Grid.Row="0"
                  Margin="0,0,0,8"
                  SelectionChanged="ProfileList_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <Ellipse Width="8" Height="8" Margin="0,0,8,0"
                                 Fill="{Binding DotColor}"/>
                        <TextBlock Text="{Binding Name}"
                                   FontFamily="Cascadia Mono, Consolas"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="1" Text="Password:" Margin="0,0,0,4"/>

        <PasswordBox x:Name="PasswordInput"
                     Grid.Row="2"
                     Height="26"
                     Margin="0,0,0,8"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,40,0,0">
            <Button Content="Create New Profile"
                    Margin="0,0,8,0"
                    Click="CreateProfile_Click"/>
            <Button Content="Unlock"
                    Width="75"
                    Margin="0,0,8,0"
                    Click="Unlock_Click"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="75"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
