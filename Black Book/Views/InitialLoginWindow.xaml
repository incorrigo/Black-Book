<!-- InitialLoginWindow.xaml -->
<Window x:Class="BlackBook.Views.InitialLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Profile"
        Height="220" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Label column -->
            <ColumnDefinition Width="*"/>
            <!-- Input field column -->
        </Grid.ColumnDefinitions>

        <!-- Profile selection -->
        <TextBlock Text="Profile:" VerticalAlignment="Center" 
                   Grid.Row="0" Grid.Column="0" Margin="0 0 8 0"/>
        <ComboBox x:Name="ProfileList" Grid.Row="0" Grid.Column="1" 
                  Margin="0 0 0 12"
                  MinWidth="200"/>

        <!-- Password input -->
        <TextBlock Text="Password:" VerticalAlignment="Center" 
                   Grid.Row="1" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="PasswordInput" Grid.Row="1" Grid.Column="1" 
                     Margin="0 0 0 12" 
                     MinWidth="200"/>

        <!-- Action buttons -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0 0 8 0" 
                    Click="Cancel_Click" 
                    IsCancel="True"/>
            <Button Content="Unlock" Width="80" Margin="0 0 8 0"
                    Click="Unlock_Click" 
                    IsDefault="True"/>
            <Button Content="Create New Profile" Width="140"
                    Click="CreateProfile_Click"/>
        </StackPanel>
    </Grid>
</Window>
