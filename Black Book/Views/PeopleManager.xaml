<Window x:Class="BlackBook.Views.PeopleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:BlackBook.Models"
        Title="People Manager"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search + List -->
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBox x:Name="SearchBox" Margin="0,0,0,5" Padding="4"
                     KeyUp="SearchBox_KeyUp" ToolTip="Type to search people..."/>
            <ListBox x:Name="PeopleList" DisplayMemberPath="Name" SelectedValuePath="Id"
                     SelectionChanged="PeopleList_SelectionChanged"/>
        </StackPanel>

        <!-- Details & Interactions -->
        <ScrollViewer Grid.Column="2" Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Person Details -->
                <GroupBox Header="Person Details" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,4"/>
                        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Padding="4"/>

                        <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,4"/>
                        <TextBox x:Name="EmailBox" Grid.Row="1" Grid.Column="1" Padding="4"/>

                        <TextBlock Text="Phone:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,4"/>
                        <TextBox x:Name="PhoneBox" Grid.Row="2" Grid.Column="1" Padding="4"/>

                        <TextBlock Text="Company:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,4"/>
                        <ComboBox x:Name="CompanyBox" Grid.Row="3" Grid.Column="1" Padding="4"
                                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

                        <TextBlock Text="Relationship:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="RelationshipBox" Grid.Row="4" Grid.Column="1" Padding="4" SelectedIndex="0">
                            <ComboBoxItem Content="Unknown"/>
                            <ComboBoxItem Content="Friendly"/>
                            <ComboBoxItem Content="Neutral"/>
                            <ComboBoxItem Content="Adversarial"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>
                <Button Content="Save Person" Width="120" Margin="10,0,0,20"
                        Click="SavePerson_Click"/>

                <!-- Interactions -->
                <GroupBox Header="Interactions" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <ListBox x:Name="InteractionList" Height="150" Margin="0,0,0,10"
                                 DisplayMemberPath="Notes"/>
                        <!-- New Interaction Form -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Company:" Grid.Row="0" Grid.Column="0" Margin="0,0,8,4"/>
                            <ComboBox x:Name="NewIntCompanyBox" Grid.Row="0" Grid.Column="1"
                                      DisplayMemberPath="Name" SelectedValuePath="Id" Padding="4"/>

                            <TextBlock Text="Situation:" Grid.Row="1" Grid.Column="0" Margin="0,0,8,4"/>
                            <ComboBox x:Name="NewIntSituationBox" Grid.Row="1" Grid.Column="1"
                                      DisplayMemberPath="Title" SelectedValuePath="Id" IsEditable="True" Padding="4"/>

                            <TextBlock Text="Direction:" Grid.Row="2" Grid.Column="0" Margin="0,0,8,4"/>
                            <ComboBox x:Name="NewIntDirectionBox" Grid.Row="2" Grid.Column="1" Padding="4" SelectedIndex="0">
                                <ComboBoxItem Content="Incoming"/>
                                <ComboBoxItem Content="Outgoing"/>
                            </ComboBox>

                            <TextBlock Text="Type:" Grid.Row="3" Grid.Column="0" Margin="0,0,8,4"/>
                            <ComboBox x:Name="NewIntTypeBox" Grid.Row="3" Grid.Column="1" Padding="4" SelectedIndex="0">
                                <ComboBoxItem Content="Email"/>
                                <ComboBoxItem Content="PhoneCall"/>
                                <ComboBoxItem Content="TextMessage"/>
                                <ComboBoxItem Content="InPersonMeeting"/>
                                <ComboBoxItem Content="VideoConference"/>
                                <ComboBoxItem Content="PostalMail"/>
                                <ComboBoxItem Content="SocialMedia"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <TextBlock Text="Notes:" Grid.Row="4" Grid.Column="0" Margin="0,0,8,4" VerticalAlignment="Top"/>
                            <TextBox x:Name="NewIntNotesBox" Grid.Row="4" Grid.Column="1" Padding="4" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </Grid>
                        <Button Content="Save Interaction" Width="140" Margin="0,10,0,0"
                                Click="SaveInteraction_Click"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Grid.ColumnSpan="3" Content="Close" Width="80" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Close_Click"/>
    </Grid>
</Window>