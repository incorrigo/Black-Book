<Window x:Class="BlackBook.Views.CorrespondenceEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Enter Correspondence"
        Height="450" Width="550"
        Background="#121212"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Border BorderBrush="#333" BorderThickness="1" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Timestamp -->
                <RowDefinition Height="Auto"/>
                <!-- Person -->
                <RowDefinition Height="Auto"/>
                <!-- Company -->
                <RowDefinition Height="Auto"/>
                <!-- Direction -->
                <RowDefinition Height="Auto"/>
                <!-- Interaction Type -->
                <RowDefinition Height="*"/>
                <!-- Notes -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Timestamp -->
            <TextBlock x:Name="TimestampText"
                       Foreground="#AAA"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,10"
                       Grid.Row="0"
                       Text="2025-06-17 [Tuesday] - 21:34"/>

            <!-- Person -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <TextBox x:Name="PersonTextBox"
                         Background="#1e1e1e"
                         Foreground="White"
                         BorderBrush="#555"
                         Padding="6"
                         TextChanged="PersonTextBox_TextChanged"/>

                <TextBlock x:Name="PersonPlaceholder"
                           Text="Person Name"
                           Foreground="#888"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Company -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <TextBox x:Name="CompanyTextBox"
                         Background="#1e1e1e"
                         Foreground="White"
                         BorderBrush="#555"
                         Padding="6"
                         TextChanged="CompanyTextBox_TextChanged"/>

                <TextBlock x:Name="CompanyPlaceholder"
                           Text="Company Name"
                           Foreground="#888"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Direction -->
            <ComboBox x:Name="DirectionComboBox"
                      Background="#1e1e1e"
                      Foreground="White"
                      BorderBrush="#555"
                      Padding="6"
                      Margin="0,0,0,10"
                      Grid.Row="3"
                      SelectedIndex="0">
                <ComboBoxItem Content="Incoming"/>
                <ComboBoxItem Content="Outgoing"/>
            </ComboBox>

            <!-- Interaction Type -->
            <ComboBox x:Name="InteractionTypeComboBox"
                      Background="#1e1e1e"
                      Foreground="White"
                      BorderBrush="#555"
                      Padding="6"
                      Margin="0,0,0,10"
                      Grid.Row="4"
                      SelectedIndex="0">
                <ComboBoxItem Content="Email"/>
                <ComboBoxItem Content="Phone Call"/>
                <ComboBoxItem Content="Text Message"/>
                <ComboBoxItem Content="In-Person Meeting"/>
                <ComboBoxItem Content="Video Conference"/>
                <ComboBoxItem Content="Postal Mail"/>
                <ComboBoxItem Content="Social Media"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <!-- Notes -->
            <Grid Grid.Row="5" Margin="0,0,0,10">
                <TextBox x:Name="NotesTextBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="#1e1e1e"
                         Foreground="White"
                         BorderBrush="#555"
                         Padding="6"
                         TextChanged="NotesTextBox_TextChanged"/>

                <TextBlock x:Name="NotesPlaceholder"
                           Text="Notes"
                           Foreground="#888"
                           Margin="8,8,0,0"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Background="#252525"
                        Foreground="White"
                        BorderBrush="#444"
                        Padding="6,4"
                        Margin="0,0,5,0"
                        Click="Cancel_Click"
                        Cursor="Hand"/>
                <Button Content="Save"
                        Background="#252525"
                        Foreground="White"
                        BorderBrush="#444"
                        Padding="6,4"
                        Click="Save_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
