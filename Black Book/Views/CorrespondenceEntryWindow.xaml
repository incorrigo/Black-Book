<Window x:Class="BlackBook.Views.CorrespondenceEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:BlackBook.Models"
        xmlns:conv="clr-namespace:BlackBook.Converters"
        Title="Enter Correspondence"
        Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.Resources>
        <conv:DirectionColorConverter      x:Key="DirectionColorConverter"/>
        <conv:RelationshipGlyphConverter   x:Key="RelationshipGlyphConverter"/>
    </Window.Resources>
    <Border BorderBrush="{StaticResource BrushLine}" BorderThickness="1" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Timestamp -->
                <RowDefinition Height="Auto"/>
                <!-- Person -->
                <RowDefinition Height="Auto"/>
                <!-- Company -->
                <RowDefinition Height="Auto"/>
                <!-- Relationship -->
                <RowDefinition Height="Auto"/>
                <!-- Direction -->
                <RowDefinition Height="Auto"/>
                <!-- Interaction Type -->
                <RowDefinition Height="Auto"/>
                <!-- Situation -->
                <RowDefinition Height="*"/>
                <!-- Notes -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
                <RowDefinition Height="200"/>
                <!-- Interaction History -->

            </Grid.RowDefinitions>



            <!-- Timestamp -->
            <TextBlock x:Name="TimestampText"
                       Foreground="{StaticResource BrushFg2}"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,10"
                       Grid.Row="0"
                       Text="2025-06-17 [Tuesday] - 21:34"/>

            <!-- Person -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <TextBox x:Name="PersonTextBox"
                         Background="{StaticResource BrushBg2}"
                         Foreground="{StaticResource BrushFg1}"
                         BorderBrush="{StaticResource BrushLine}"
                         Padding="6"
                         TextChanged="PersonTextBox_TextChanged"/>

                <TextBlock x:Name="PersonPlaceholder"
                           Text="Person Name"
                           Foreground="{StaticResource BrushFg2}"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Company -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <TextBox x:Name="CompanyTextBox"
                         Background="{StaticResource BrushBg2}"
                         Foreground="{StaticResource BrushFg1}"
                         BorderBrush="{StaticResource BrushLine}"
                         Padding="6"
                        TextChanged="CompanyTextBox_TextChanged"/>

                <TextBlock x:Name="CompanyPlaceholder"
                           Text="Company Name"
                           Foreground="{StaticResource BrushFg2}"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Relationship -->
            <ComboBox x:Name="RelationshipComboBox"
          Grid.Row="3"
          Background="{StaticResource BrushBg2}"
          Foreground="{StaticResource BrushFg1}"
          BorderBrush="{StaticResource BrushLine}"
          Padding="6"
          Margin="0,0,0,10"
          SelectedIndex="0">
                <ComboBoxItem Content="Unknown"/>
                <ComboBoxItem Content="Friendly"/>
                <ComboBoxItem Content="Neutral"/>
                <ComboBoxItem Content="Adversarial"/>
            </ComboBox>


            <!-- Direction -->
            <ComboBox x:Name="DirectionComboBox"
                      Background="{StaticResource BrushBg2}"
                      Foreground="{StaticResource BrushFg1}"
                      BorderBrush="{StaticResource BrushLine}"
                      Padding="6"
                      Margin="0,0,0,10"
                      Grid.Row="4"
                      SelectedIndex="0">
                <ComboBoxItem Content="Incoming"/>
                <ComboBoxItem Content="Outgoing"/>
            </ComboBox>

            <!-- Interaction Type -->
            <ComboBox x:Name="InteractionTypeComboBox"
                      Background="{StaticResource BrushBg2}"
                      Foreground="{StaticResource BrushFg1}"
                      BorderBrush="{StaticResource BrushLine}"
                      Padding="5"
                      Margin="0,0,0,10"
                      Grid.Row="4"
                      SelectedIndex="0">
                <ComboBoxItem Content="Email"/>
                <ComboBoxItem Content="Phone Call"/>
                <ComboBoxItem Content="Text Message"/>
                <ComboBoxItem Content="In-Person Meeting"/>
                <ComboBoxItem Content="Video Conference"/>
                <ComboBoxItem Content="Postal Mail"/>
                <ComboBoxItem Content="Social Media"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <!-- Situation -->
            <Grid Grid.Row="6" Margin="0,0,0,10">
                <ComboBox x:Name="SituationComboBox"
              Background="{StaticResource BrushBg2}"
              Foreground="{StaticResource BrushFg1}"
              BorderBrush="{StaticResource BrushLine}"
              Padding="6"
              IsEditable="True"
              IsTextSearchEnabled="False"
              Text="AdHoc"/>
                <TextBlock Text="Situation"
               Foreground="{StaticResource BrushFg2}"
               Margin="8,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
            </Grid>


            <!-- Notes -->
            <Grid Grid.Row="7" Margin="0,0,0,10">
                <TextBox x:Name="NotesTextBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="{StaticResource BrushBg2}"
                         Foreground="{StaticResource BrushFg1}"
                         BorderBrush="{StaticResource BrushLine}"
                         Padding="6"
                         TextChanged="NotesTextBox_TextChanged"/>

                <TextBlock x:Name="NotesPlaceholder"
                           Text="Notes"
                           Foreground="{StaticResource BrushFg2}"
                           Margin="8,8,0,0"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Content="Cancel"
            Grid.Column="1"
            Margin="0,0,5,0"
            Width="80"
            Click="Cancel_Click"/>

                <Button Content="Save"
                        x:Name="SaveButton"
            Grid.Column="2"
            Width="80"
            Click="Save_Click"/>
            </Grid>

            <ListBox x:Name="HistoryList"
         Grid.Row="9"
         Margin="0,10,0,0"
         Background="{StaticResource BrushBg2}"
         Foreground="{StaticResource BrushFg1}"
         BorderBrush="{StaticResource BrushLine}"
         BorderThickness="1"
         FontSize="12"
         Padding="4">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Interaction}">
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <!-- glyph column -->
                                <ColumnDefinition Width="*"/>
                                <!-- text -->
                            </Grid.ColumnDefinitions>

                            <!-- glyph (🙂 • ⚠️) -->
                            <TextBlock Grid.Column="0"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding Person.Relationship,
                                      Converter={StaticResource RelationshipGlyphConverter}}"/>

                            <!-- one-line summary -->
                            <TextBlock Grid.Column="1"
                       Text="{Binding Path=Notes}"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource BrushFg1}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>



            </ListBox>
            <Button x:Name="ReplyButton"
        Content="Send Response"
        Margin="0,8,0,0"
        Width="140"
        HorizontalAlignment="Right"
        Click="ReplyToSelected_Click"/>



        </Grid>
    </Border>
</Window>
