<!-- CompanyEntryWindow.xaml -->
<Window x:Class="BlackBook.Views.CompanyEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Company"
        Height="250" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" FontFamily="Verdana">
    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:"    Grid.Row="0" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0 2 0 4"/>

        <TextBlock Text="Address:" Grid.Row="1" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="AddrBox" Grid.Row="1" Grid.Column="1" Margin="0 2 0 4"/>

        <TextBlock Text="Phone:"   Grid.Row="2" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="PhoneBox" Grid.Row="2" Grid.Column="1" Margin="0 2 0 4"/>

        <TextBlock Text="Description:" Grid.Row="3" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Top"/>
        <TextBox   x:Name="DescBox" Grid.Row="3" Grid.Column="1" Margin="0 2 0 4"
                   AcceptsReturn="True" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Cancel" Width="88" Margin="0 0 8 0"
                    Click="Cancel_Click" IsCancel="True"/>
            <Button Content="Save"   Width="88"
                    Click="Save_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
