<Window x:Class="BlackBook.Views.ArchiveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        FontFamily="Verdana" MinWidth="520" MinHeight="380">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText" Grid.Row="0" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

        <!-- Archived items list -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1">
            <ListView x:Name="ArchiveList" Margin="0" MouseDoubleClick="ArchiveList_MouseDoubleClick" SelectionChanged="ArchiveList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="6">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Id}" FontSize="10" Foreground="#888888"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="RestoreButton" Content="Restore Selected" Padding="14,6" Margin="0,0,8,0" Click="RestoreButton_Click" IsEnabled="False"/>
            <Button Content="Close" Padding="14,6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>