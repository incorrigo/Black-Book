<!-- PersonEntryWindow.xaml -->
<Window x:Class="BlackBook.Views.PersonEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Person"
        Height="340" Width="440"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:"    Grid.Row="0" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="NameBox"   Grid.Row="0" Grid.Column="1" Margin="0 2 0 2"/>

        <TextBlock Text="Email:"   Grid.Row="1" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="EmailBox"  Grid.Row="1" Grid.Column="1" Margin="0 2 0 2"/>

        <TextBlock Text="Phone:"   Grid.Row="2" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="PhoneBox"  Grid.Row="2" Grid.Column="1" Margin="0 2 0 2"/>

        <TextBlock Text="Company:" Grid.Row="3" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <ComboBox  x:Name="CompanyBox" Grid.Row="3" Grid.Column="1" Margin="0 2 0 2"
                   IsEditable="True"
                   ItemsSource="{Binding Companies}" DisplayMemberPath="Name"
                   StaysOpenOnEdit="True"/>

        <TextBlock Text="Relation:" Grid.Row="4" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <ComboBox  x:Name="RelationBox" Grid.Row="4" Grid.Column="1" Margin="0 2 0 2"
                   SelectedIndex="0">
            <ComboBoxItem Content="Unknown"/>
            <ComboBoxItem Content="Friendly"/>
            <ComboBoxItem Content="Neutral"/>
            <ComboBoxItem Content="Adversarial"/>
        </ComboBox>

        <TextBlock Text="Position:" Grid.Row="5" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Center"/>
        <TextBox   x:Name="PositionBox" Grid.Row="5" Grid.Column="1" Margin="0 2 0 2"/>

        <TextBlock Text="Notes:"   Grid.Row="6" Grid.Column="0" Margin="0 4 0 0" VerticalAlignment="Top"/>
        <TextBox   x:Name="NotesBox"   Grid.Row="6" Grid.Column="1" Margin="0 2 0 2"
                   AcceptsReturn="True" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
            <Button Content="Cancel" Width="80" Margin="0 0 8 0"
                    Click="Cancel_Click" IsCancel="True"/>
            <Button Content="Save"   Width="80"
                    Click="Save_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
