<!-- ChangePasswordWindow.xaml (new) -->
<Window x:Class="BlackBook.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Height="260" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Current Password:" VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="CurrentPasswordBox" Grid.Row="0" Grid.Column="1"
                     Width="200" Margin="0 0 0 8"/>

        <TextBlock Text="New Password:" VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="1" Grid.Column="1"
                     Width="200" Margin="0 0 0 8"
                     PasswordChanged="NewPasswordBox_PasswordChanged"/>

        <TextBlock Text="Confirm Password:" VerticalAlignment="Center"
                   Grid.Row="2" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Grid.Column="1"
                     Width="200" Margin="0 0 0 8"
                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <Rectangle x:Name="PasswordStrengthIndicator"
                   Grid.Row="3" Grid.ColumnSpan="2"
                   Height="4" RadiusX="2" RadiusY="2"
                   Fill="Gray" Margin="0 0 0 12"
                   ToolTip="Password Strength Indicator"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0 0 8 0"
                    Click="Cancel_Click" IsCancel="True"/>
            <Button x:Name="ChangeButton" Content="Change" Width="80"
                    Click="Change_Click" IsDefault="True" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
