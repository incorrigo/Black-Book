<!-- INCORRIGO SYX DIGITAL COMMUNICATION SYSTEMS 
	2025-07-01 [Tuesday]
	[BlackBook/Views/About.xaml] -->

<Window x:Class="BlackBook.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Black Book"
        Height="560" Width="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Verdana">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- title -->
            <RowDefinition Height="*"/>
            <!-- description -->
            <RowDefinition Height="Auto"/>
            <!-- developed by -->
            <RowDefinition Height="Auto"/>
            <!-- org -->
            <RowDefinition Height="Auto"/>
            <!-- version -->
            <RowDefinition Height="Auto"/>
            <!-- IRC network -->
            <RowDefinition Height="Auto"/>
            <!-- incorrigo.io -->
            <RowDefinition Height="Auto"/>
            <!-- blank line -->
            <RowDefinition Height="Auto"/>
            <!-- IRC server -->
            <RowDefinition Height="Auto"/>
            <!-- hold fast -->
            <RowDefinition Height="Auto"/>
            <!-- dates -->
            <RowDefinition Height="Auto"/>
            <!-- umbra -->
            <RowDefinition Height="Auto"/>
            <!-- close button -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Black Book - Personal Contacts Manager"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="#FF0FA3FF"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,8">
            Black Book is a secure, portable correspondence manager
            that helps you manage interactions, people, companies,
            and situations under lock and key.
        </TextBlock>

        <TextBlock Grid.Row="2"
                   Text="Developed by"
                   FontWeight="SemiBold"
                   Foreground="#555555"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="0,8,0,0"/>

        <TextBlock Grid.Row="3"
                   Text="INCORRIGO SYX DIGITAL COMMUNICATION SYSTEMS"
                   FontWeight="SemiBold"
                   Foreground="#555555"
                   FontSize="12"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,2,0,0"/>

        <TextBlock Grid.Row="4"
                   Text="Version 0.1.0 - 2025-07-01"
                   Foreground="#555555"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="0,4,0,12"/>

        <!-- Incorrigo Syx IRC Network -->
        <TextBlock Grid.Row="5"
                   Text="Incorrigo Syx IRC Network"
                   FontWeight="Bold"
                   Foreground="#444444"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="0,4,0,0"/>

        <!-- incorrigo.io clickable link -->
        <TextBlock Grid.Row="6"
                   TextAlignment="Center"
                   Margin="0,2,0,0">
            <Hyperlink NavigateUri="https://incorrigo.io/" RequestNavigate="Hyperlink_RequestNavigate">
                https://incorrigo.io/
            </Hyperlink>
        </TextBlock>

        <!-- Blank line for spacing -->
        <TextBlock Grid.Row="7" Margin="0,4,0,4"/>

        <!-- irc.incorrigo.io clickable link -->
        <TextBlock Grid.Row="8"
                   TextAlignment="Center"
                   Margin="0,2,0,12">
            <Hyperlink NavigateUri="ircs://irc.incorrigo.io/" RequestNavigate="Hyperlink_RequestNavigate">
                irc.incorrigo.io
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="9"
                   Text="“HOLD FAST THAT WHICH IS GOOD”"
                   FontStyle="Italic"
                   FontWeight="SemiBold"
                   Foreground="#AA444444"
                   FontSize="14"
                   TextAlignment="Center"
                   Margin="0,4,0,0"/>

        <TextBlock Grid.Row="10"
                   Text="MCMLXXXVIII / MMXXV"
                   FontStyle="Italic"
                   Foreground="#77444444"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="0,4,0,0"/>

        <TextBlock Grid.Row="11"
                   Text="[ umbra mortis ]"
                   FontStyle="Italic"
                   Foreground="#77444444"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="0,0,0,8"/>

        <Button Grid.Row="12"
                Content="Close"
                Width="90"
                HorizontalAlignment="Center"
                Margin="0,4,0,0"
                IsDefault="True"
                Click="Close_Click"/>
    </Grid>
</Window>
