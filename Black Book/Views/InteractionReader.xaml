<Window x:Class="BlackBook.Views.InteractionReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BlackBook.Converters"
        Title="Black Book Reader"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        FontFamily="Verdana">
    
    <Window.Resources>
        <conv:InteractionTypeFriendlyConverter x:Key="InteractionTypeFriendlyConverter"/>
        <conv:InteractionDirectionFriendlyConverter x:Key="InteractionDirectionFriendlyConverter"/>
        <conv:InteractionTypeBrushConverter x:Key="InteractionTypeBrushConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Situation title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding SituationTitle}"
                   FontWeight="Bold"
                   FontSize="16" />

        <!-- Interaction details with coloured dot -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,26,0,8" VerticalAlignment="Center">
            <!-- Coloured Dot -->
            <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"
                     Fill="{Binding InteractionType, Converter={StaticResource InteractionTypeBrushConverter}}"/>
            
            <!-- Type text -->
            <TextBlock Text="{Binding InteractionType, Converter={StaticResource InteractionTypeFriendlyConverter}}" 
                       FontWeight="Bold" FontSize="11" Margin="0,0,8,0"/>
            
            <!-- Direction -->
            <TextBlock Text="{Binding InteractionDirection, Converter={StaticResource InteractionDirectionFriendlyConverter}}" 
                       FontSize="11" Foreground="#333" Margin="0,0,4,0"/>
            
            <!-- Person Name -->
            <TextBlock Text="{Binding PersonName}" FontSize="11" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Subtle greyed-out timestamp -->
        <TextBlock Grid.Row="0" 
           HorizontalAlignment="Right" 
           VerticalAlignment="Top" 
           Foreground="#AAAAAA"
           FontSize="12"
           Margin="0,26,0,0"
           Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd [dddd] HH:mm}'}"/>

        <Separator Grid.Row="0" Margin="0,52,0,0"/>

        <!-- Notes (as-is) -->
        <TextBox Grid.Row="1"
                 Margin="0,8"
                 Text="{Binding Notes}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 IsReadOnly="True"/>

        <!-- Bottom bar -->
        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock DockPanel.Dock="Left"
                       FontSize="10" Foreground="Gray"
                       Text="{Binding InteractionGuid, StringFormat=' {0}'}"
                       VerticalAlignment="Center"/>
            <Button DockPanel.Dock="Right"
                    Content="Close"
                    Width="80"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </DockPanel>
    </Grid>
</Window>
