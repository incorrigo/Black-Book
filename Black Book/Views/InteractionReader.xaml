<!-- InteractionReader.xaml -->
<Window x:Class="BlackBook.Views.InteractionReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interaction Reader"
        Width="500" Height="400" FontFamily="Verdana">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding SituationTitle}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Margin="0,4,0,0" FontSize="11">
                <Run Text="{Binding InteractionType}"/>
                <Run Text=" "/>
                <Run Text="{Binding InteractionDirection}"/>
                <Run Text=" "/>
                <Run Text="{Binding PersonName}"/>
            </TextBlock>
            <TextBlock Margin="0,2,0,4" FontSize="11" Foreground="Gray"
                       Text="{Binding Relationship}"/>
            <Separator Margin="0,4"/>
        </StackPanel>

        <TextBox Grid.Row="1" Text="{Binding Notes}" Margin="0,4" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBlock FontSize="10" Foreground="Gray"
                       Text="{Binding SituationGuid, StringFormat='Situation GUID: {0}'}"
                       VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock FontSize="10" Foreground="Gray"
                       Text="{Binding InteractionGuid, StringFormat='Interaction GUID: {0}'}"
                       VerticalAlignment="Center"/>
            <Button Content="Close" Width="80" Margin="12,0,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
