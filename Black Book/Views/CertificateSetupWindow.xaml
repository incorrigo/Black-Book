<Window x:Class="BlackBook.Views.CertificateSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Certificate"
        Height="260" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="UserNameBox"
                     Padding="6"
                     TextChanged="UserNameBox_TextChanged"/>
            <TextBlock x:Name="InitialsMarker"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0"
                       FontSize="10"
                       IsHitTestVisible="False"/>
        </Grid>

        <!-- Password -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <PasswordBox x:Name="PasswordBox"
                         Padding="6"
                         PasswordChanged="PasswordBox_PasswordChanged"/>
        </Grid>

        <!-- Strength -->
        <Rectangle x:Name="PasswordStrengthIndicator"
                   Grid.Row="2"
                   Height="2"
                   RadiusX="1" RadiusY="1"
                   Fill="Gray"
                   Margin="0,0,0,20"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Padding="5,3"
                    Margin="0,0,5,0"
                    Click="Cancel_Click"/>
            <Button Content="Create"
                    Padding="5,3"
                    Click="CreateKey_Click"/>
        </StackPanel>
    </Grid>
</Window>
