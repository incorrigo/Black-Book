<Window x:Class="BlackBook.Views.CertificateSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Certificate"
        Height="260" Width="380"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Border BorderBrush="#333" BorderThickness="1" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Name input with Initials marker -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBox x:Name="UserNameBox"
                         Background="#1e1e1e"
                         Foreground="White"
                         BorderBrush="#555"
                         Padding="6"
                         TextChanged="UserNameBox_TextChanged"/>
                <TextBlock x:Name="InitialsMarker"
                           Foreground="#555"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"
                           FontSize="10"
                           IsHitTestVisible="False"/>
                <TextBlock Foreground="#888"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Text="Name"
                           Visibility="{Binding Text.IsEmpty, ElementName=UserNameBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <!-- Password input -->
            <Grid Grid.Row="1" Margin="0,0,0,5">
                <PasswordBox x:Name="PasswordBox"
                             Background="#1e1e1e"
                             Foreground="White"
                             BorderBrush="#555"
                             Padding="6"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock Foreground="#888"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Text="Password"
                           Visibility="{Binding Password.IsEmpty, ElementName=PasswordBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <!-- Password strength indicator -->
            <Rectangle x:Name="PasswordStrengthIndicator"
                       Grid.Row="2"
                       Height="2"
                       RadiusX="1" RadiusY="1"
                       Fill="#333"
                       Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Background="#252525"
                        Foreground="White"
                        BorderBrush="#444"
                        Padding="5,3"
                        Margin="0,0,5,0"
                        Click="Cancel_Click"
                        Cursor="Hand"/>

                <Button Content="Create"
                        Background="#252525"
                        Foreground="White"
                        BorderBrush="#444"
                        Padding="5,3"
                        Click="CreateKey_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
