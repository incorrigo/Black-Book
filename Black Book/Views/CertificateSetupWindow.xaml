<Window x:Class="BlackBook.Views.CertificateSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Certificate Setup"
        Height="240" Width="478"
        Background="#121212"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Create Your Certificate" 
			           Foreground="White" 
			           FontSize="16"
			           Margin="0,0,0,15"
			           HorizontalAlignment="Center"/>
            <TextBox x:Name="UserNameBox" 
         Background="#1e1e1e"
         Foreground="White" 
         Padding="5"
         BorderBrush="#444"
         Margin="0,0,0,10"/>

            <PasswordBox x:Name="PasswordBox"
			             Background="#1e1e1e"
			             Foreground="White"
			             Padding="5"
			             BorderBrush="#444"
			             Margin="0,0,0,15"/>
            <Button Content="Create Key"
			        Background="#292929"
			        Foreground="White"
			        BorderBrush="#444"
			        Padding="6"
			        Click="CreateKey_Click"
			        Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
