<!-- CertificateSetupWindow.xaml -->
<Window x:Class="BlackBook.Views.CertificateSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Profile"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Name input -->
        <TextBlock Text="Name:" VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="0" Margin="0 0 8 0"/>
        <Grid Grid.Row="0" Grid.Column="1" Margin="0 0 0 10">
            <!-- TextBox with overlay TextBlock to show initials -->
            <TextBox x:Name="UserNameBox" Width="250" Padding="6"
                     TextChanged="UserNameBox_TextChanged"/>
            <TextBlock x:Name="InitialsMarker"
                       HorizontalAlignment="Right" VerticalAlignment="Center"
                       Margin="0,0,6,0" FontSize="10" Foreground="Gray"
                       IsHitTestVisible="False"/>
        </Grid>

        <!-- Password input -->
        <TextBlock Text="Password:" VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1"
                     Width="250" Padding="6" Margin="0 0 0 8"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Confirm Password input -->
        <TextBlock Text="Confirm Password:" VerticalAlignment="Center"
                   Grid.Row="2" Grid.Column="0" Margin="0 0 8 0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Grid.Column="1"
                     Width="250" Padding="6" Margin="0 0 0 8"
                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <!-- Password strength indicator bar -->
        <Rectangle x:Name="PasswordStrengthIndicator"
                   Grid.Row="3" Grid.ColumnSpan="2"
                   Height="4" RadiusX="2" RadiusY="2"
                   Fill="Gray" Margin="0 0 0 16"
                   ToolTip="Password Strength Indicator"/>

        <!-- Action buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Padding="6 4" Margin="0 0 8 0"
                    Click="Cancel_Click" IsCancel="True"/>
            <Button x:Name="CreateButton" Content="Create" Padding="6 4"
                    Click="CreateKey_Click" IsDefault="True" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
