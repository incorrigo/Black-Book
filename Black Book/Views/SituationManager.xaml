<Window x:Class="BlackBook.Views.SituationManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Situations" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Situation list -->
        <ListBox x:Name="SituationList" DisplayMemberPath="Title"
                 SelectionChanged="SituationList_SelectionChanged"
                 Grid.Column="0" />

        <!-- Detail panel -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Title" />
            <TextBox x:Name="TitleBox" Margin="0 5" />

            <TextBlock Text="Description" />
            <TextBox x:Name="DescriptionBox" Margin="0 5" Height="80" TextWrapping="Wrap" AcceptsReturn="True" />

            <TextBlock Text="Status" />
            <ComboBox x:Name="StatusComboBox" Margin="0 5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Save" Click="Save_Click" Margin="0 0 10 0" />
                <Button Content="Cancel" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
