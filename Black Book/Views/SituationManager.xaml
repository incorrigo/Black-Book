<!-- SituationManager.xaml -->
<UserControl x:Class="BlackBook.Views.SituationManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:BlackBook.Converters" FontFamily="Verdana">
    <UserControl.Resources>
        <conv:PersonNameConverter x:Key="PersonNameConverter" />
        <conv:CompanyNameConverter x:Key="CompanyNameConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- List of situations -->
        <ListView x:Name="SituationsList" Grid.Column="0"
                  ItemsSource="{Binding Situations}"
                  SelectedIndex="0" Margin="0 0 8 0"
                  MouseDoubleClick="SituationsList_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Situation"
                      Click="EditSituation_Click"/>
                    <MenuItem Header="Delete Situation"
                      Click="DeleteSituation_Click"/>
                    <Separator/>
                    <MenuItem Header="Add Correspondence…"
                      Click="AddCorrespondence_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0 2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <!-- Status colored dot -->
                        <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="2 0 4 0"
                                 Fill="{Binding Status, Converter={StaticResource StatusBrushConverter}}"/>
                        <!-- Situation title -->
                        <TextBlock Grid.Column="1" Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        <!-- Interaction count -->
                        <TextBlock Grid.Column="2" HorizontalAlignment="Right"
                                   FontSize="10" Foreground="Gray"
                                   Text="{Binding Interactions.Count}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Situation details and interactions -->
        <Border Grid.Column="1" Padding="8" BorderBrush="#CCC" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Situation Title at top -->
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,2,8"
                           FontWeight="Bold" FontSize="14"
                           Text="{Binding SelectedItem.Title, ElementName=SituationsList}" />

                <!-- Situation description and meta -->
                <StackPanel Grid.Row="0" Margin="0 24 0 4">
                    <TextBlock Text="{Binding ElementName=SituationsList, Path=SelectedItem.Description}" 
                               TextWrapping="Wrap" Foreground="Black"/>
                    <TextBlock FontSize="10" Foreground="Gray"
                               Text="{Binding ElementName=SituationsList, Path=SelectedItem.Created, StringFormat=Created: {0:yyyy-MM-dd}}"/>
                    <TextBlock x:Name="ClosedText" FontSize="10" Foreground="Gray"
                               Text="{Binding ElementName=SituationsList, Path=SelectedItem.Closed, StringFormat=Closed: {0:yyyy-MM-dd}}"
                               Visibility="{Binding ElementName=SituationsList, Path=SelectedItem.Closed, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Margin="0 8 0 4" FontStyle="Italic" Text="People involved:"/>
                    <ListBox x:Name="PeopleListInSituation"
                             ItemsSource="{Binding ElementName=SituationsList, Path=SelectedItem.People}"
                             DisplayMemberPath="Name"
                             MouseDoubleClick="PeopleListInSituation_MouseDoubleClick"/>
                </StackPanel>
                <!-- Interaction history list -->
                <ListBox x:Name="HistoryList"
         Grid.Row="1" Margin="0 0 0 4"
         ItemsSource="{Binding ElementName=SituationsList, Path=SelectedItem.Interactions}"
         MouseDoubleClick="HistoryList_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,4">
                                <TextBlock FontWeight="Bold" FontSize="12">
                <Run Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd [dddd] - HH:mm}}" />
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"
                         Fill="{Binding Direction, Converter={StaticResource DirectionColorConverter}}" />
                                    <TextBlock FontWeight="Bold" Foreground="#000"
                           Text="{Binding Type, Converter={StaticResource InteractionTypeFriendlyConverter}}" />
                                    <TextBlock Text=" – " FontWeight="SemiBold" />
                                    <TextBlock FontStyle="Italic"
                           Text="{Binding Converter={StaticResource InteractionPartiesConverter}}" />
                                </StackPanel>
                                <TextBlock FontSize="10" Foreground="Gray" Text="{Binding Id}" />
                                <TextBlock
                                    Text="{Binding Notes, Converter={StaticResource NoteTruncationConverter}}"
                                    TextWrapping="Wrap"
                                    TextTrimming="CharacterEllipsis"
                                    MaxWidth="400"
                                    Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>


                <!-- Reply button and GUID at bottom -->
                <DockPanel Grid.Row="2">
                    <TextBlock FontSize="11" Foreground="Gray" DockPanel.Dock="Left" VerticalAlignment="Center"
                               Text="{Binding SelectedItem.Id, ElementName=SituationsList, StringFormat='Situation: {0}'}" />
                    <Button x:Name="ReplyButton" Content="Bounce FAO" Width="120" DockPanel.Dock="Right"
                            HorizontalAlignment="Right" Click="ReplyToSelected_Click"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
