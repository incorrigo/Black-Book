<Window x:Class="BlackBook.Views.SituationManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Situations"
        Height="400" Width="600"
        Background="#121212"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Situation list -->
        <ListBox x:Name="SituationList"
		         DisplayMemberPath="Title"
		         SelectionChanged="SituationList_SelectionChanged"
		         Background="#1e1e1e"
		         Foreground="White"
		         BorderBrush="#444" />

        <!-- Detail panel -->
        <StackPanel Grid.Column="1"
		            Margin="10"
		            VerticalAlignment="Top"
		            x:Name="DetailPanel">

            <TextBlock Text="Title" Foreground="#AAA"/>
            <TextBox x:Name="TitleBox"
			         Background="#1e1e1e"
			         Foreground="White"
			         BorderBrush="#555"
			         Padding="6"
			         Margin="0 2 0 8"/>

            <TextBlock Text="Description" Foreground="#AAA"/>
            <TextBox x:Name="DescriptionBox"
			         Height="80"
			         TextWrapping="Wrap"
			         AcceptsReturn="True"
			         Background="#1e1e1e"
			         Foreground="White"
			         BorderBrush="#555"
			         Padding="6"
			         Margin="0 2 0 8"/>

            <TextBlock Text="Status" Foreground="#AAA"/>
            <ComboBox x:Name="StatusComboBox"
			          Background="#1e1e1e"
			          Foreground="White"
			          BorderBrush="#555"
			          Padding="6"
			          Margin="0 2 0 20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
			            HorizontalAlignment="Right">
                <Button Content="Save"
				        Width="80"
				        Click="Save_Click"
				        Margin="0 0 10 0"/>
                <Button Content="Cancel"
				        Width="80"
				        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
