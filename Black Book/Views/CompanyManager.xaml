<UserControl x:Class="BlackBook.Views.CompanyManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:BlackBook.Converters"
             MinWidth="300">

    <!-- local converters -->
    <UserControl.Resources>
        <conv:PersonNameConverter x:Key="PersonNameConverter"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ────────────────────────────────────────────────────────────────
             MASTER LIST  (left column)
        ───────────────────────────────────────────────────────────────── -->
        <ListView  x:Name="CompanyList"
                   Grid.Column="0"
                   ItemsSource="{Binding Companies}"
                   SelectedIndex="0"
                   MouseDoubleClick="CompanyList_MouseDoubleClick"
                   Margin="0,0,8,0">

            <!-- row style (empty for now – kept for future use) -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem"/>
            </ListView.ItemContainerStyle>

            <!-- context‑menu for every row (placed **outside** GridView!) -->
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Company"
                              Click="EditCompany_Click"/>
                    <MenuItem Header="Delete Company"
                              Click="DeleteCompany_Click"/>
                    <Separator/>
                    <MenuItem Header="Add Person…"
                              Click="AddPerson_Click"/>
                    <MenuItem Header="Add Correspondence…"
                              Click="AddCorrespondence_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>

            <!-- grid columns -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Company"
                                    Width="155"
                                    DisplayMemberBinding="{Binding Name}"/>

                    <GridViewColumn Header="Contacts"
                                    Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding People.Count}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Interactions"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Interactions.Count}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- ────────────────────────────────────────────────────────────────
             DETAILS PANE  (right column)  — unchanged
        ───────────────────────────────────────────────────────────────── -->
        <Border Grid.Column="1"
                Padding="12"
                BorderThickness="1"
                BorderBrush="#AAA">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- headline -->
                    <TextBlock FontSize="18"
                               FontWeight="Bold"
                               Text="{Binding ElementName=CompanyList,
                                              Path=SelectedItem.Name}"/>
                    <TextBlock FontSize="10"
                               Foreground="Gray"
                               Text="{Binding ElementName=CompanyList,
                                              Path=SelectedItem.Id}"/>

                    <!-- meta -->
                    <TextBlock>
                        <Run Text="Address: "/>
                        <Run Text="{Binding ElementName=CompanyList,
                                            Path=SelectedItem.Address,
                                            TargetNullValue='N/A'}"/>
                    </TextBlock>

                    <TextBlock Margin="0 2 0 0">
                        <Run Text="Phone: "/>
                        <Run Text="{Binding ElementName=CompanyList,
                                            Path=SelectedItem.PhoneNumber,
                                            TargetNullValue='N/A'}"/>
                    </TextBlock>

                    <TextBlock Margin="0 2 0 0">
                        <Run Text="Website: "/>
                        <Run Text="{Binding ElementName=CompanyList,
                                            Path=SelectedItem.Website,
                                            TargetNullValue='N/A'}"/>
                    </TextBlock>

                    <TextBlock Text="{Binding ElementName=CompanyList,
                                              Path=SelectedItem.Description}"
                               TextWrapping="Wrap"
                               Margin="0 4 0 0"/>

                    <!-- contacts -->
                    <TextBlock Margin="0 8 0 4"
                               FontStyle="Italic"
                               Text="Contacts:"/>
                    <ListBox  x:Name="PeopleList"
                              ItemsSource="{Binding ElementName=CompanyList,
                                                    Path=SelectedItem.People}"
                              DisplayMemberPath="Name"
                              MouseDoubleClick="PeopleList_MouseDoubleClick"/>

                    <!-- recent interactions -->
                    <TextBlock Margin="0 8 0 4"
                               FontStyle="Italic"
                               Text="Recent Interactions:"/>
                    <ListBox  x:Name="InteractionList"
                              ItemsSource="{Binding ElementName=CompanyList,
                                                    Path=SelectedItem.Interactions}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0 4 0 4">
                                    <TextBlock FontWeight="Bold"
                                               Text="{Binding Timestamp,
                                                              StringFormat={}{0:yyyy-MM-dd [dddd] - HH:mm}}"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0 0 0 2">
                                        <Ellipse Width="8"
                                                 Height="8"
                                                 Margin="0 0 6 0"
                                                 VerticalAlignment="Center"
                                                 Fill="{Binding Direction,
                                                                Converter={StaticResource DirectionColorConverter}}"/>
                                        <TextBlock Text="{Binding Type}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text=" – "
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Converter={StaticResource InteractionPartiesConverter}}"
                                        FontStyle="Italic"/>
                                    </StackPanel>
                                    <TextBlock FontSize="10"
                                               Foreground="Gray"
                                               Text="{Binding Id}"/>
                                    <TextBlock Text="{Binding Notes}"
                                               TextWrapping="Wrap"
                                               Margin="0 2 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
