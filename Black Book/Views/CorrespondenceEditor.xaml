<!-- CorrespondenceEditor.xaml -->
<Window x:Class="BlackBook.Views.CorrespondenceEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BlackBook.Converters"
        Title="Edit Correspondence"
        Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Verdana">

    <Window.Resources>
        <conv:InteractionTypeFriendlyConverter x:Key="InteractionTypeFriendlyConverter"/>
        <conv:InteractionDirectionFriendlyConverter x:Key="InteractionDirectionFriendlyConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock FontSize="15" FontWeight="Bold" Text="{Binding SituationTitle}" />
            <TextBlock FontSize="12" Margin="0,2,0,2">
                <Run Text="{Binding InteractionType, Converter={StaticResource InteractionTypeFriendlyConverter}}"/>
                <Run Text=" "/>
                <Run Text="{Binding InteractionDirection, Converter={StaticResource InteractionDirectionFriendlyConverter}}"/>
                <Run Text=" "/>
                <Run Text="{Binding PersonName}"/>
            </TextBlock>
            <TextBlock FontSize="11" Foreground="#666" Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd [dddd] - HH:mm}'}" />
        </StackPanel>

        <TextBox Grid.Row="1" Text="{Binding Notes}" TextWrapping="Wrap"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <!-- GUID explicitly placed on bottom-left -->
            <TextBlock DockPanel.Dock="Left" FontSize="10" Foreground="#888"
                       Text="{Binding InteractionGuid}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="4,0"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" IsCancel="True" Click="Cancel_Click"/>
                <Button Content="Save" Width="90" IsDefault="True" Click="Save_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
