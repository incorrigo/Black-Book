<!-- CorrespondenceEditor.xaml -->
<Window x:Class="BlackBook.Views.CorrespondenceEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BlackBook.Converters"
        Title="Black Book Editor"
        Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Verdana">

    <Window.Resources>
        <conv:InteractionTypeFriendlyConverter x:Key="InteractionTypeFriendlyConverter"/>
        <conv:InteractionDirectionFriendlyConverter x:Key="InteractionDirectionFriendlyConverter"/>
        <conv:InteractionTypeBrushConverter x:Key="InteractionTypeBrushConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Situation Title -->
            <RowDefinition Height="Auto"/>
            <!-- Interaction Details & Timestamp -->
            <RowDefinition Height="*"/>
            <!-- Notes -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Buttons & GUID -->
        </Grid.RowDefinitions>

        <!-- Situation Title -->
        <TextBlock Grid.Row="0"
                   FontSize="15"
                   FontWeight="Bold"
                   Text="{Binding SituationTitle}"
                   Margin="0,0,0,8"/>

        <!-- Interaction Details and Timestamp aligned horizontally -->
        <DockPanel Grid.Row="1" Margin="0,4,0,8">
            <!-- Timestamp on the right -->
            <TextBlock DockPanel.Dock="Right"
                       FontSize="12"
                       Foreground="#AAAAAA"
                       VerticalAlignment="Center"
                       Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>

            <!-- Interaction Details aligned left -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"
                         Fill="{Binding InteractionType, Converter={StaticResource InteractionTypeBrushConverter}}"/>

                <TextBlock FontWeight="Bold" FontSize="11" Margin="0,0,8,0" VerticalAlignment="Center"
                           Text="{Binding InteractionType, Converter={StaticResource InteractionTypeFriendlyConverter}}"/>

                <TextBlock FontSize="11" Foreground="#333" Margin="0,0,4,0" VerticalAlignment="Center"
                           Text="{Binding InteractionDirection, Converter={StaticResource InteractionDirectionFriendlyConverter}}"/>

                <TextBlock FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"
                           Text="{Binding PersonName}"/>
            </StackPanel>
        </DockPanel>

        <!-- Separator -->
        <Separator Grid.Row="1" Margin="0,30,0,0" VerticalAlignment="Bottom"/>

        <!-- Notes -->
        <TextBox Grid.Row="2"
                 Margin="0,8,0,0"
                 Text="{Binding Notes}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>

        <!-- Bottom Controls: GUID on left, Buttons on right -->
        <DockPanel Grid.Row="3" Margin="0,8,0,0">
            <!-- Buttons (Right-aligned, declared FIRST) -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0"
                        IsCancel="True" Click="Cancel_Click"/>
                <Button Content="Save" Width="90"
                        IsDefault="True" Click="Save_Click"/>
            </StackPanel>

            <!-- GUID (Left-aligned, declared LAST) -->
            <TextBlock DockPanel.Dock="Left"
                       FontSize="10"
                       Foreground="#888"
                       Text="{Binding InteractionGuid}"
                       Margin="4,0"/>
        </DockPanel>
    </Grid>
</Window>
