<Window x:Class="BlackBook.Views.PasswordConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Password"
        Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="{StaticResource BrushBg1}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Border BorderBrush="{StaticResource BrushLine}" BorderThickness="1" Padding="20">
        <Grid Background="{StaticResource BrushBg1}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Background="{StaticResource BrushBg2}"
                             Foreground="{StaticResource BrushFg1}"
                             BorderBrush="{StaticResource BrushLine}"
                             Padding="6"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                <TextBlock Foreground="{StaticResource BrushFg2}"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Text="Re-enter Password"
                           Visibility="{Binding Password.IsEmpty, ElementName=ConfirmPasswordBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                <Button x:Name="ActionButton"
                        Content="Cancel"
                        Background="{StaticResource BrushBg3}"
                        Foreground="{StaticResource BrushFg1}"
                        BorderBrush="{StaticResource BrushLine}"
                        Padding="5,3"
                        Click="ActionButton_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
